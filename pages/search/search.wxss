/* pages/search/search.wxss */
/* 引入template 对应的css... */
@import "../../templates/relative/relative.wxss";
.search-wrap {
  display: flex;
  background: orange;
  padding: 8px 10px;
  box-sizing: border-box;
}

.search_form {
  flex: auto;
  position: relative;
  border-radius: 6px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.search_icon {
  position: absolute;
  top: 8px;
  left: 15px;
}

.search_input_box input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.search_input_box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
}

.search_btn {
  color: #fff;
  margin-left: 10px;
  font-size: 12pt;
  line-height: 28px;
}

.search_tit {
  padding: 10px 0;
  font-size: 14pt;
  color: #666;
}

.search_item {
  font-size: 12pt;
}

.search_list {
  display: flex;
  overflow: hidden;
  flex-wrap: wrap
}

.search_hot_item {
  flex: 1 1 1;
  padding: 2px 5px;
  margin: 0 12px 12px 0;
  border-radius: 4px;
  font-size: 13px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #333;
  background-color: #f5f5f5;
}
