/* pages/search/search.wxss */
.search-wrap{
  display: flex;
  background:orange;
  padding: 8px 10px;
  box-sizing: border-box
}
.search_form{
  flex: auto;
  position: relative;
  border-radius: 6px;
  background: #fff;
  border:1rpx solid #e6e6ea;
}
.search_icon{
  position: absolute;
  top: 8px;
  left: 15px
}
.search_input_box input{
  height:28px;
  line-height:28px;
  font-size:14px
}
.search_input_box{
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
}
.search_btn{
  color: #fff;
  margin-left: 10px;
  font-size: 12pt;
  line-height: 28px
}